{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
  ],
  "includes": [
    "**/*.md",
    "**/*.json",
    "**/*.yaml",
    "**/*.yml"
  ],
  "excludes": [
    "**/node_modules",
    "**/.git",
    "**/go.sum"
  ],
  "markdown": {
    "lineWidth": 80
  },
  "json": {
    "indentWidth": 2
  },
  "yaml": {
    "indentWidth": 2
  }
}
